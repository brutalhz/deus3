version: "3.7"
services:
  app:
    build:
      context: ./
      dockerfile: Dockerfile
    image: travellist
    container_name: travellist_app
    restart: unless-stopped
    working_dir: /var/www/
    volumes:
      - ./:/var/www
    networks:
      - travellist
#      - loki
    logging:
      driver: loki
      options:
        loki-url: "http://{{ hostvars[inventory_hostname]['groups']['monitoring'][0] }}:3100/loki/api/v1/push"
        max-size: "50m"
        max-file: "10"

  db:
    image: mysql:8.0
    container_name: travellist_db
    restart: unless-stopped
    environment:
      MYSQL_DATABASE: ${DB_DATABASE}
      MYSQL_ROOT_PASSWORD: ${DB_PASSWORD}
      MYSQL_PASSWORD: ${DB_PASSWORD}
      MYSQL_USER: ${DB_USERNAME}
      SERVICE_TAGS: build
      SERVICE_NAME: mysql
    volumes:
      - ./docker-compose/mysql:/docker-entrypoint-initdb.d
    networks:
      - travellist
#      - loki
    logging:
      driver: loki
      options:
        loki-url: "http://{{ hostvars[inventory_hostname]['groups']['monitoring'][0] }}:3100/loki/api/v1/push"
        max-size: "50m"
        max-file: "10"

  nginx:
    image: nginx:alpine
    container_name: travellist_nginx
    restart: unless-stopped
    ports:
      - 8000:80
    volumes:
      - ./:/var/www
      - ./docker-compose/nginx:/etc/nginx/conf.d/
    networks:
      - travellist
#      - loki
    logging:
      driver: loki
      options:
        loki-url: "http://{{ hostvars[inventory_hostname]['groups']['monitoring'][0] }}/loki/api/v1/push"
        max-size: "50m"
        max-file: "10"

  sidecar:
    build:
      context: .
      dockerfile: Dockerfile_sidecar
    container_name: travellist-sidecar
    restart: "no"
    command: sh ./sidecar.sh
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    networks:
      - travellist
#      - loki
    depends_on:
      - app
#    logging:
#      driver: loki
#      options:
#        loki-url: "http://{{ hostvars[inventory_hostname]['groups']['monitoring'][0] }}:3100/loki/api/v1/push"
#        max-size: "50m"
#        max-file: "10"

networks:
  travellist:
    driver: bridge
  loki:
